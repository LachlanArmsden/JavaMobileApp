<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/se_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Event"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
    />
    <TextView
            android:text="SE Event Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/se_name_textview"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.205"
            android:textSize="20sp"/>
    <TextView
            android:text="SE Event Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/se_type_textview"
            app:layout_constraintTop_toBottomOf="@+id/se_name_textview" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/se_desc_textview"
            app:layout_constraintVertical_bias="0.316" android:textSize="20sp"
    />
    <TextView
            android:text="SE Event Description"
            android:layout_width="350dp"
            android:layout_height="250dp" android:id="@+id/se_desc_textview"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.491"
            android:layout_marginBottom="136dp" android:textSize="16sp" android:textAlignment="center"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/se_back_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"/>
    <Button
            android:text="Book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/se_book_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>